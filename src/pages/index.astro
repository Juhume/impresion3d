---
import Layout from '../layouts/Layout.astro';
import FeaturedProducts from '../components/react/FeaturedProducts';
import { CONFIG } from '../data/config.js';

const base = import.meta.env.BASE_URL;
const whatsappLink = `https://wa.me/${CONFIG.whatsapp}?text=${encodeURIComponent(CONFIG.mensajeBase)}`;

const features = [
  { icon: 'truck', label: 'Envío a toda España', value: '24-48h' },
  { icon: 'leaf', label: 'Material PLA ecológico', value: '100%' },
  { icon: 'customize', label: 'Diseños personalizables', value: '+50' },
];

const steps = [
  {
    number: '01',
    title: 'Explora',
    description: 'Navega por nuestro catálogo o cuéntanos tu idea personalizada',
    icon: 'search',
  },
  {
    number: '02',
    title: 'Conecta',
    description: 'Hablamos por WhatsApp para confirmar todos los detalles',
    icon: 'message',
  },
  {
    number: '03',
    title: 'Recibe',
    description: 'Lo imprimimos con precisión y te lo enviamos a casa',
    icon: 'package',
  },
];
---

<Layout>
  <!-- HERO -->
  <section class="hero" id="hero">
    <!-- Animated background -->
    <div class="hero-bg" aria-hidden="true">
      <div class="gradient-orb orb-1"></div>
      <div class="gradient-orb orb-2"></div>
      <div class="gradient-orb orb-3"></div>
      <div class="grid-overlay"></div>
      <div class="noise-layer"></div>
    </div>

    <!-- Floating 3D Element -->
    <div class="hero-visual" aria-hidden="true">
      <div class="cube-container">
        <div class="cube">
          <div class="cube-face front"></div>
          <div class="cube-face back"></div>
          <div class="cube-face right"></div>
          <div class="cube-face left"></div>
          <div class="cube-face top"></div>
          <div class="cube-face bottom"></div>
        </div>
        <div class="cube-glow"></div>
        <div class="cube-reflection"></div>
      </div>
    </div>

    <div class="container hero-content">
      <!-- Status badge -->
      <div class="hero-status">
        <span class="status-indicator" aria-hidden="true">
          <span class="status-ping"></span>
          <span class="status-dot"></span>
        </span>
        <span class="status-text mono">Impresión 3D Premium en España</span>
      </div>

      <!-- Main headline -->
      <h1 class="hero-title">
        <span class="title-line">
          <span class="title-word">Piezas</span>
          <span class="title-word">únicas,</span>
        </span>
        <span class="title-line title-accent-line">
          <span class="title-word accent">impresas</span>
          <span class="title-word accent">para</span>
          <span class="title-word accent">ti</span>
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle">
        Diseños originales que transforman espacios.<br class="hide-mobile" />
        <span class="subtle">Calidad artesanal. Materiales ecológicos. Precisión milimétrica.</span>
      </p>

      <!-- CTA Buttons -->
      <div class="hero-actions">
        <a href={`${base}catalogo/`} class="btn btn-primary btn-glow">
          <span class="btn-text">Explorar catálogo</span>
          <span class="btn-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </span>
        </a>
        <a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="btn btn-glass">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
