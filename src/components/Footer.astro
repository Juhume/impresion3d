---
import { CONFIG } from '../data/config.js';

const year = new Date().getFullYear();
const whatsappUrl = `https://wa.me/${CONFIG.whatsapp}?text=${encodeURIComponent(CONFIG.mensajeBase)}`;
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-main">
      <!-- Columna 1: Marca -->
      <div class="footer-col footer-brand">
        <a href="/" class="footer-logo">
          <span class="logo-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 3l8 4.5v9L12 21l-8-4.5v-9L12 3z"/>
              <path d="M12 12l8-4.5"/>
              <path d="M12 12v9"/>
              <path d="M12 12L4 7.5"/>
            </svg>
          </span>
          {CONFIG.nombreMarca}
        </a>
        <p class="footer-tagline">{CONFIG.descripcion}</p>
      </div>

      <!-- Columna 2: Navegación -->
      <div class="footer-col footer-nav">
        <h4>Navegación</h4>
        <ul>
          <li><a href="/">Inicio</a></li>
          <li><a href="/catalogo">Catálogo</a></li>
        </ul>
      </div>

      <!-- Columna 3: Contacto -->
      <div class="footer-col footer-contact">
        <h4>Contacto</h4>
        <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="whatsapp-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          Escríbenos
        </a>
        <p class="response-time">Respondemos en 24h</p>
      </div>
    </div>

    <div class="footer-divider"></div>

    <div class="footer-bottom">
      <p class="copyright">&copy; {year} {CONFIG.nombreMarca}</p>
      <p class="made-with">Hecho con <span class="heart">♥</span> en España</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    background: linear-gradient(180deg, #f8f9fa 0%, #f1f3f5 100%);
    border-top: 1px solid #e5e7eb;
  }

  .footer-container {
    width: 100%;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    padding: 48px 24px 32px 24px;
    box-sizing: border-box;
  }

  .footer-main {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: flex-start;
    gap: 40px;
    margin-bottom: 40px;
  }

  .footer-col {
    flex: 1 1 auto;
    min-width: 150px;
  }

  .footer-brand {
    flex: 2 1 250px;
    max-width: 300px;
  }

  .footer-nav,
  .footer-contact {
    flex: 1 1 150px;
  }

  /* Logo */
  .footer-logo {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    gap: 10px;
    font-size: 1.2rem;
    font-weight: 700;
    color: #1a1a1a;
    text-decoration: none;
  }

  .footer-logo:hover {
    color: #2563eb;
  }

  .logo-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #2563eb, #3b82f6);
    color: white;
    border-radius: 8px;
    flex-shrink: 0;
  }

  .footer-tagline {
    color: #6b7280;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 12px 0 0 0;
  }

  /* Títulos de sección */
  .footer-nav h4,
  .footer-contact h4 {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #9ca3af;
    margin: 0 0 14px 0;
  }

  /* Links de navegación */
  .footer-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-nav li {
    margin: 0;
    padding: 0;
  }

  .footer-nav a {
    color: #4b5563;
    font-size: 0.95rem;
    text-decoration: none;
  }

  .footer-nav a:hover {
    color: #2563eb;
  }

  /* WhatsApp link */
  .whatsapp-link {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
    color: #25d366;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
  }

  .whatsapp-link:hover {
    color: #1da851;
  }

  .response-time {
    color: #9ca3af;
    font-size: 0.8rem;
    margin: 8px 0 0 0;
  }

  /* Divider */
  .footer-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, #d1d5db 50%, transparent 100%);
    margin-bottom: 24px;
  }

  /* Bottom */
  .footer-bottom {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }

  .copyright {
    color: #9ca3af;
    font-size: 0.85rem;
    margin: 0;
  }

  .made-with {
    color: #9ca3af;
    font-size: 0.85rem;
    margin: 0;
    display: inline-flex;
    align-items: center;
    gap: 5px;
  }

  .heart {
    color: #ef4444;
    font-size: 1rem;
  }

  /* Mobile */
  @media (max-width: 640px) {
    .footer-container {
      padding: 12px 16px;
    }

    .footer-main,
    .footer-divider {
      display: none;
    }

    .footer-bottom {
      flex-direction: row;
      justify-content: center;
      align-items: center;
      gap: 6px;
    }

    .copyright,
    .made-with {
      font-size: 0.75rem;
    }

    .copyright::after {
      content: "·";
      margin-left: 6px;
    }

    .heart {
      font-size: 0.8rem;
    }
  }
</style>
