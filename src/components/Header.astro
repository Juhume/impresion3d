---
import { CONFIG } from '../data/config.js';

const currentPath = Astro.url.pathname;
---

<header class="header">
  <nav class="nav">
    <a href="/" class="logo">
      {CONFIG.nombreMarca}
    </a>

    <ul class="nav-links">
      <li>
        <a href="/" class:list={["nav-link", { active: currentPath === "/" }]}>
          Inicio
        </a>
      </li>
      <li>
        <a href="/catalogo" class:list={["nav-link", { active: currentPath === "/catalogo" || currentPath.startsWith("/producto") }]}>
          Cat√°logo
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 64px;
    background-color: rgba(255, 255, 255, 0.98);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #e5e5e5;
    z-index: 100;
  }

  .nav {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    height: 64px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .logo {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1a1a1a;
    white-space: nowrap;
  }

  .logo:hover {
    color: #2563eb;
  }

  .nav-links {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links li {
    display: inline-block;
  }

  .nav-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: #666;
    padding: 8px 0;
    position: relative;
    white-space: nowrap;
    display: inline-block;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: #2563eb;
    transition: width 0.2s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: #1a1a1a;
  }

  .nav-link.active::after,
  .nav-link:hover::after {
    width: 100%;
  }

  @media (max-width: 480px) {
    .header {
      height: 56px;
    }

    .nav {
      height: 56px;
      padding: 0 16px;
    }

    .logo {
      font-size: 1rem;
    }

    .nav-links {
      gap: 16px;
    }

    .nav-link {
      font-size: 0.9rem;
    }
  }
</style>
