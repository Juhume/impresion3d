---
interface Props {
  nombre: string;
  imagen: string;
  precio: number | string;
  precioOferta?: number | null;
  slug: string;
  categoria: string;
}

const { nombre, imagen, precio, precioOferta, slug, categoria } = Astro.props;
const base = import.meta.env.BASE_URL;

// Normalizar precios
const precioNum = typeof precio === 'string' ? parseFloat(precio) : precio;
const precioFinal = precioOferta ?? precioNum;
const tieneOferta = precioOferta !== null && precioOferta !== undefined;

// Calcular descuento
const descuento = tieneOferta ? Math.round((1 - precioOferta / precioNum) * 100) : 0;

// Manejar imagen (puede ser ruta local, URL externa, o undefined)
const imagenFinal = imagen || '/images/placeholder.svg';
const imagenSrc = imagenFinal.startsWith('/') ? `${base}${imagenFinal.slice(1)}` : imagenFinal;
---

<article class="product-card">
  <a href={`${base}producto/${slug}/`} class="product-link">
    <!-- Card glow effect -->
    <div class="card-glow" aria-hidden="true"></div>

    <!-- Image container -->
    <div class="product-image">
      <div class="image-pattern" aria-hidden="true">
        <svg viewBox="0 0 100 100" preserveAspectRatio="none">
          <defs>
            <pattern id={`grid-${slug}`} width="10" height="10" patternUnits="userSpaceOnUse">
              <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
            </pattern>
          </defs>
          <rect width="100" height="100" fill={`url(#grid-${slug})`}/>
        </svg>
      </div>
      <div class="image-wrapper">
        <img
          src={imagenSrc}
          alt={nombre}
          loading="lazy"
          width="400"
          height="400"
          decoding="async"
        />
      </div>

      {tieneOferta && (
        <div class="discount-badge">
          <span class="badge-text mono">-{descuento}%</span>
          <span class="badge-glow" aria-hidden="true"></span>
        </div>
      )}

      <!-- Hover overlay -->
      <div class="hover-overlay" aria-hidden="true">
        <div class="overlay-content">
          <span class="view-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="3"/>
              <path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7z"/>
            </svg>
          </span>
          <span class="view-text mono">Ver detalles</span>
        </div>
        <div class="overlay-gradient"></div>
      </div>
    </div>

    <!-- Info container -->
    <div class="product-info">
      <div class="info-top">
        <span class="product-category mono">{categoria}</span>
        <div class="category-line" aria-hidden="true"></div>
      </div>

      <h3 class="product-name">{nombre}</h3>

      <div class="product-footer">
        <div class="product-pricing">
          <span class="price-current mono">{precioFinal.toFixed(2)}€</span>
          {tieneOferta && (
            <span class="price-original mono">{precioNum.toFixed(2)}€</span>
          )}
        </div>
        <span class="arrow-indicator" aria-hidden="true">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </div>
    </div>

    <!-- Bottom accent line -->
    <div class="card-accent" aria-hidden="true">
      <div class="accent-progress"></div>
    </div>
  </a>
</article>

<style>
  .product-card {
    position: relative;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .product-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-8px);
  }

  /* Card glow */
  .card-glow {
    position: absolute;
    inset: -1px;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-light) 100%);
    border-radius: inherit;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -1;
    filter: blur(20px);
  }

  .product-card:hover .card-glow {
    opacity: 0.3;
  }

  .product-link {
    display: flex;
    flex-direction: column;
    text-decoration: none;
    height: 100%;
  }

  /* Image Section */
  .product-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: linear-gradient(135deg, var(--color-bg-subtle) 0%, var(--color-surface) 100%);
  }

  .image-pattern {
    position: absolute;
    inset: 0;
    color: var(--color-border);
    opacity: 0.5;
  }

  .image-pattern svg {
    width: 100%;
    height: 100%;
  }

  .image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .product-image img {
    width: 85%;
    height: 85%;
    object-fit: contain;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.3));
  }

  .product-card:hover .product-image img {
    transform: scale(1.08) rotate(2deg);
  }

  /* Discount badge */
  .discount-badge {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 8px 14px;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-light) 100%);
    border-radius: var(--radius-sm);
    z-index: 3;
    overflow: hidden;
  }

  .badge-text {
    position: relative;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-bg);
    letter-spacing: 0.02em;
    z-index: 1;
  }

  .badge-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.3) 50%, transparent 100%);
    transform: translateX(-100%);
    animation: shimmerBadge 3s ease-in-out infinite;
  }

  @keyframes shimmerBadge {
    0%, 100% { transform: translateX(-100%); }
    50% { transform: translateX(100%); }
  }

  /* Hover overlay */
  .hover-overlay {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 2;
  }

  .product-card:hover .hover-overlay {
    opacity: 1;
  }

  .overlay-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(5, 5, 7, 0.9) 0%,
      rgba(5, 5, 7, 0.6) 40%,
      rgba(5, 5, 7, 0.3) 100%
    );
  }

  .overlay-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    z-index: 1;
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .product-card:hover .overlay-content {
    transform: translateY(0);
    opacity: 1;
    transition-delay: 0.1s;
  }

  .view-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 50%;
    color: var(--color-accent);
    backdrop-filter: blur(10px);
  }

  .view-icon svg {
    width: 24px;
    height: 24px;
  }

  .view-text {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text);
    padding: 8px 16px;
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-full);
    backdrop-filter: blur(10px);
  }

  /* Product Info */
  .product-info {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex: 1;
  }

  .info-top {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .product-category {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-accent);
    white-space: nowrap;
  }

  .category-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, var(--color-border), transparent);
  }

  .product-name {
    font-family: 'Space Grotesk', var(--font-display), sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
    line-height: 1.4;
    transition: color 0.3s ease;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card:hover .product-name {
    color: var(--color-accent-light);
  }

  .product-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: 12px;
    border-top: 1px solid var(--color-border);
  }

  .product-pricing {
    display: flex;
    align-items: baseline;
    gap: 10px;
  }

  .price-current {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.02em;
  }

  .price-original {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    text-decoration: line-through;
  }

  .arrow-indicator {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-muted);
    transition: all 0.3s ease;
  }

  .arrow-indicator svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .product-card:hover .arrow-indicator {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-bg);
  }

  .product-card:hover .arrow-indicator svg {
    transform: translateX(3px);
  }

  /* Bottom accent */
  .card-accent {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--color-border);
    overflow: hidden;
  }

  .accent-progress {
    position: absolute;
    inset: 0;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .product-card:hover .accent-progress {
    transform: scaleX(1);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .product-image img {
      width: 80%;
      height: 80%;
    }

    .product-info {
      padding: 16px;
      gap: 10px;
    }

    .product-name {
      font-size: 1rem;
    }

    .price-current {
      font-size: 1.1rem;
    }

    .hover-overlay {
      display: none;
    }

    .product-card:hover {
      transform: translateY(-4px);
    }
  }

  @media (max-width: 480px) {
    .product-card:hover {
      transform: none;
    }

    .product-card:hover .product-image img {
      transform: none;
    }

    .discount-badge {
      top: 12px;
      left: 12px;
      padding: 6px 10px;
    }

    .badge-text {
      font-size: 0.7rem;
    }

    .product-info {
      padding: 14px;
    }

    .product-category {
      font-size: 0.6rem;
    }

    .product-name {
      font-size: 0.95rem;
    }

    .price-current {
      font-size: 1rem;
    }

    .price-original {
      font-size: 0.8rem;
    }

    .arrow-indicator {
      width: 28px;
      height: 28px;
    }

    .arrow-indicator svg {
      width: 14px;
      height: 14px;
    }
  }
</style>
