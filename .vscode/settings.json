{
  // Editor
  "editor.fontSize": 14,
  "editor.fontFamily": "'Fira Code', 'JetBrains Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 80,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.linkedEditing": true,
  "editor.wordWrap": "on",
  "editor.stickyScroll.enabled": true,

  // Workbench - Visual
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.tree.indent": 16,
  "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "none",

  // Files
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Terminal
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,

  // TypeScript / JavaScript
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,

  // Prettier
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 100,

  // Astro
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  },

  // CSS
  "[css]": {
    "editor.suggest.insertMode": "replace"
  },

  // Spell checker
  "cSpell.language": "en,es",
  "cSpell.enableFiletypes": ["astro"],

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Error Lens (ya lo tienes instalado)
  "errorLens.gutterIconsEnabled": true,
  "errorLens.messageBackgroundMode": "message",

  // Better Comments
  "better-comments.tags": [
    { "tag": "!", "color": "#FF2D00", "strikethrough": false, "bold": true },
    { "tag": "?", "color": "#3498DB", "strikethrough": false, "bold": false },
    { "tag": "//", "color": "#474747", "strikethrough": true, "bold": false },
    { "tag": "todo", "color": "#FF8C00", "strikethrough": false, "bold": false },
    { "tag": "*", "color": "#98C379", "strikethrough": false, "bold": false }
  ],

  // Material Icon Theme
  "material-icon-theme.folders.color": "#42a5f5",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.activeIconPack": "react",

  // Indent Rainbow
  "indentRainbow.colors": [
    "rgba(255,255,64,0.07)",
    "rgba(127,255,127,0.07)",
    "rgba(255,127,255,0.07)",
    "rgba(79,236,236,0.07)"
  ],

  // Exclude from search
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/pnpm-lock.yaml": true
  }
}
